		</grid>
		<grid id="suratjalanGrid" style="border:none;" visible="true">
			<rows>
				<row>
					<cell width="15%">No.SuratJalan:</cell>
					<cell width="20%" sclass="text-primary">
						<combobox id="suratjalanCombobox"
							width="220px">
						</combobox>
					</cell>
					<cell width="15%">
						<button id="suratjalanAddButton"
							label="Tambah" visible="true" iconSclass="z-icon-plus"
							sclass="compButton"
							style="background-color:var(--bs-success)">
						</button>
					</cell>
					<cell></cell>
				</row>
			</rows>
		</grid>
		<listbox id="invoiceProductListbox" height="460px">
