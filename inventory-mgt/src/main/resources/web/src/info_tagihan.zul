						<row>
							<cell>
								<label value="" sclass="h5"></label>
							</cell>
							<cell>
								<label value="" sclass="h5"></label>
							</cell>
							<cell align="right" sclass="text-primary">
								<label id="subtotal02JasaLabel" sclass="h5" value="38.950.455,00"></label>
							</cell>
							<cell></cell>							
						</row>
						<row>
							<cell>
								<label value="PPh23" sclass="h5"></label>
							</cell>
							<cell>
								<label value=":" sclass="h5"></label>
							</cell>
							<cell align="right" sclass="text-primary">
								<label id="pph23JasaLabel" sclass="h5" value="-701.810,00"></label>
							</cell>
							<cell></cell>							
						</row>
						<row>
							<cell>
								<label value="Total" sclass="h5"></label>
							</cell>
							<cell>
								<label value=":" sclass="h5"></label>
							</cell>
							<cell align="right" sclass="text-primary">
								<label id="totalJasaLabel" sclass="h5" value="38.248.645,00"></label>
							</cell>
							<cell></cell>							
						</row>
					</rows>
				</grid>
				<n:div sclass="mt-3">
					<n:h4>Pallet</n:h4>
				</n:div>
				<grid style="border:none" sclass="mt-3">
					<rows>
						<row>
							<cell width="25%">
								<label value="Pallet" sclass="h5"></label>
							</cell>
							<cell width="5%">
								<label value=":" sclass="h5"></label>
