<?page title="info" contentType="text/html;charset=UTF-8"?>
<div xmlns:n="native" id="infoInvoicePanel" apply="${infoInvoiceController}">
	<n:div sclass="mt-3">
		<n:h3>Invoice</n:h3>	
	</n:div>
	<n:div sclass="mt-3">
