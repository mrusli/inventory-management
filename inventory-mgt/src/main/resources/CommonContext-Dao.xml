<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans 
        http://www.springframework.org/schema/beans/spring-beans.xsd">

	<import resource="CommonContext-Config.xml"></import>
	
	<!-- common -->
	
	<bean id="dao" class="com.pyramix.persistence.common.dao.hibernate.DaoHibernate">
		<property name="sessionFactory" ref="sessionFactory"></property>
	</bean>
	
	<!-- inventoryType -->
	
	<bean id="inventoryTypeDao" class="com.pyramix.persistence.inventorytype.dao.hibernate.InventoryTypeHibernate">
		<property name="sessionFactory" ref="sessionFactory"></property>	
	</bean> 
	
	<!-- inventoryCode -->
	
	<bean id="inventoryCodeDao" class="com.pyramix.persistence.inventorycode.dao.hibernate.InventoryCodeHibernate">
		<property name="sessionFactory" ref="sessionFactory"></property>
	</bean>
	
	<!-- customer -->
	
	<bean id="customerDao" class="com.pyramix.persistence.customer.dao.hibernate.CustomerHibernate">
		<property name="sessionFactory" ref="sessionFactory"></property>
	</bean>
	
	<!-- company -->
	
	<bean id="companyDao" class="com.pyramix.persistence.company.dao.hibernate.CompanyHibernate">
		<property name="sessionFactory" ref="sessionFactory"></property>	
	</bean>
	
	<!-- serial -->
	
	<bean id="serialDao" class="com.pyramix.persistence.serial.dao.hibernate.SerialHibernate">
		<property name="sessionFactory" ref="sessionFactory"></property>	
	</bean>
	
	<!-- inventory -->
	
	<bean id="inventoryDao" class="com.pyramix.persistence.inventory.dao.hibernate.InventoryHibernate">
		<property name="sessionFactory" ref="sessionFactory"></property>
	</bean>
	
	<!-- inventoryProcess -->
	
	<bean id="inventoryProcessDao" class="com.pyramix.persistence.inventoryprocess.dao.hibernate.InventoryProcessHibernate">
		<property name="sessionFactory" ref="sessionFactory"></property>
	</bean>
	
</beans>